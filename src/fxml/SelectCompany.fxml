<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<Pane fx:id="mainPane" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SelectCompanyController">
   <children>
      <VBox alignment="CENTER" prefHeight="195.0" prefWidth="271.0">
         <children>
            <ComboBox fx:id="select" prefHeight="26.0" prefWidth="183.0" promptText="Select Company">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ComboBox>
            <Button mnemonicParsing="false" onAction="#addNew" prefHeight="26.0" prefWidth="182.0" text="New company">
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#ok" prefHeight="26.0" prefWidth="95.0" text="OK" />
         </children>
      </VBox>
   </children>
</Pane>
